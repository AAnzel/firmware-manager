#!/usr/bin/make -f

CLEAN ?= 1
VENDORED ?= 1

%:
	dh $@

override_dh_auto_clean:
ifeq ($(CLEAN),1)
	make clean
endif
ifeq ($(VENDORED),1)
	if ! ischroot; then \
		make vendor; \
	fi
endif

override_dh_auto_build:
ifeq ($(VENDORED),1)
	tar pxf vendor.tar.xz
endif
	make all

override_dh_auto_install:
	dh_auto_install -- prefix=/usr
