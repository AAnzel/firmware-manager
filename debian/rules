#!/usr/bin/make -f

CLEAN ?= 1
VENDOR ?= 1

%:
	dh $@

override_dh_auto_clean:
ifeq ($(CLEAN),1)
	make clean
endif
	make toml-gen features='system76 fwupd'
ifeq ($(VENDOR),1)
	if ! ischroot; then \
		make vendor; \
	fi
endif

override_dh_auto_build:
	make all VENDOR=$(VENDOR) features='system76 fwupd' prefix=/usr

override_dh_auto_install:
	dh_auto_install -- prefix=/usr
